# Production Environment Configuration

# Server
NODE_ENV=production
PORT=3001
API_BASE_URL=https://api.wessley.ai

# Neo4j (AuraDB Cloud)
NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-secure-aura-password
NEO4J_DATABASE=neo4j
NEO4J_MAX_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30000

# Redis (Cloud provider - AWS ElastiCache, etc.)
REDIS_HOST=your-redis-cluster.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# AWS S3 (Production storage)
S3_ACCESS_KEY_ID=your-aws-access-key
S3_SECRET_ACCESS_KEY=your-aws-secret-key
S3_REGION=us-east-1
S3_BUCKET=wessley-3d-models-prod
S3_ENDPOINT=
S3_FORCE_PATH_STYLE=false

# CloudFront CDN
CDN_BASE_URL=https://cdn.wessley.ai
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id

# Supabase (Production project)
SUPABASE_URL=https://your-prod-project.supabase.co
SUPABASE_SERVICE_KEY=your-prod-service-key
SUPABASE_ANON_KEY=your-prod-anon-key

# Performance & Security
JOB_CONCURRENCY=10
JOB_MAX_RETRIES=3
RATE_LIMIT_MAX_REQUESTS=50
MAX_GLB_FILE_SIZE=52428800
MAX_TRIANGLES=1000000

# Logging & Monitoring
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
ENABLE_METRICS=true