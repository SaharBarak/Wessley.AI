# 3D Model Generation Service Environment Configuration

# Application
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Redis Queue System
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Supabase Integration (Optional - service works without it)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# AWS S3 Storage (For GLB file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=wessley-3d-models
S3_CDN_URL=https://cdn.wessley.ai

# Authentication (When Supabase is not available)
JWT_SECRET=your-jwt-secret-for-development
DEVELOPMENT_MODE=true

# Feature Flags
ENABLE_METRICS=true
ENABLE_WEBHOOKS=true
ENABLE_RATE_LIMITING=true

# Performance Tuning
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MS=300000
MEMORY_LIMIT_MB=2048

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Default Vehicle for Testing
DEFAULT_VEHICLE_SIGNATURE=pajero_pinin_2001

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://wessley.ai
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_TIMEOUT_MS=5000

# Development Tools
ENABLE_SWAGGER=true
ENABLE_ADMIN_ENDPOINTS=true