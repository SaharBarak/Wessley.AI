{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "NodeMetadata@1",
  "title": "Node Metadata",
  "description": "LLM-generated metadata for electrical components (evidence-bound)",
  "type": "object",
  "required": ["nodeId", "confidence", "evidence"],
  "properties": {
    "nodeId": {
      "type": "string",
      "description": "Reference to ElectroGraph node ID"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score for this metadata"
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text", "source"],
        "properties": {
          "text": {
            "type": "string",
            "minLength": 10,
            "description": "Evidence text supporting metadata"
          },
          "source": {
            "type": "string",
            "description": "Source reference for evidence"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence in this piece of evidence"
          }
        }
      },
      "minItems": 1,
      "description": "Supporting evidence for metadata claims"
    },
    "function": {
      "type": ["string", "null"],
      "description": "Primary function/purpose of component"
    },
    "specifications": {
      "type": "object",
      "properties": {
        "voltage": {
          "type": ["string", "null"],
          "pattern": "^[0-9]+(\\.?[0-9]+)?V$",
          "description": "Operating voltage (e.g., '12V')"
        },
        "current": {
          "type": ["string", "null"], 
          "pattern": "^[0-9]+(\\.?[0-9]+)?A$",
          "description": "Current rating (e.g., '15A')"
        },
        "power": {
          "type": ["string", "null"],
          "pattern": "^[0-9]+(\\.?[0-9]+)?W$", 
          "description": "Power rating (e.g., '55W')"
        },
        "resistance": {
          "type": ["string", "null"],
          "description": "Resistance value with units"
        },
        "pinCount": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "Number of pins/terminals"
        }
      }
    },
    "location": {
      "type": "object",
      "properties": {
        "zone": {
          "type": ["string", "null"],
          "enum": [null, "engine", "dash", "interior", "trunk", "exterior", "underhood", "undercar"],
          "description": "Physical location zone"
        },
        "mounting": {
          "type": ["string", "null"],
          "description": "How component is mounted"
        },
        "access": {
          "type": ["string", "null"],
          "enum": [null, "easy", "moderate", "difficult", "special_tools"],
          "description": "Service access difficulty"
        }
      }
    },
    "connections": {
      "type": "object",
      "properties": {
        "upstream": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Upstream component IDs"
        },
        "downstream": {
          "type": "array", 
          "items": {"type": "string"},
          "description": "Downstream component IDs"
        },
        "grounds": {
          "type": "array",
          "items": {"type": "string"}, 
          "description": "Ground point IDs"
        }
      }
    },
    "serviceInfo": {
      "type": "object",
      "properties": {
        "partNumber": {
          "type": ["string", "null"],
          "description": "OEM part number"
        },
        "replaceInterval": {
          "type": ["string", "null"],
          "description": "Replacement interval"
        },
        "testProcedure": {
          "type": ["string", "null"],
          "description": "How to test component"
        },
        "commonFailures": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Common failure modes"
        }
      }
    },
    "gaps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["field", "reason"],
        "properties": {
          "field": {
            "type": "string",
            "description": "Missing field name"
          },
          "reason": {
            "type": "string",
            "description": "Why field is missing/null"
          }
        }
      },
      "description": "Fields that could not be determined from evidence"
    },
    "generated": {
      "type": "string",
      "format": "date-time",
      "description": "When metadata was generated"
    }
  }
}