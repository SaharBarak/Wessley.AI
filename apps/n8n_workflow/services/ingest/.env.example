# Ingest Service Configuration
NODE_ENV=production
PORT=3001

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=wessley-lake
S3_PREFIX=jobs
S3_ENDPOINT=https://s3.amazonaws.com

# Redis Configuration for Caching
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL Configuration (in seconds)
CACHE_TTL_DEFAULT=3600
CACHE_TTL_LLM_METADATA=86400
CACHE_TTL_RESEARCH=604800
CACHE_TTL_VEHICLE_SIG=2592000

# Data Lake Structure
EVENTS_PREFIX=raw/events
RESEARCH_PREFIX=raw/research
NORMALIZED_PREFIX=normalized/electrograph
ENRICHED_PREFIX=enriched/node_metadata
SPATIALIZED_PREFIX=spatialized/electrograph3d
CURATED_PREFIX=curated
ANALYTICS_PREFIX=analytics/viewer_events

# API Configuration
API_KEY=your-ingest-api-key
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Monitoring
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Data Validation
SCHEMA_VALIDATION_ENABLED=true
SCHEMA_PATH=/data/schemas

# File Upload Limits
MAX_FILE_SIZE_MB=100
MAX_BATCH_SIZE=1000

# Compression
COMPRESS_EVENTS=true
COMPRESS_THRESHOLD_KB=1

# Retention Policy
CLEANUP_ENABLED=true
CLEANUP_OLDER_THAN_DAYS=90

# Security
WEBHOOK_SECRET=your-webhook-secret
ENCRYPTION_KEY=your-32-char-encryption-key