# N8N Configuration
N8N_PROTOCOL=http
N8N_HOST=localhost
N8N_PORT=5678
N8N_ENCRYPTION_KEY=changeme-generate-secure-32-char-key

# Database (SQLite by default, can use PostgreSQL for production)
# DB_TYPE=sqlite
# DB_SQLITE_DATABASE=/home/node/.n8n/database.sqlite

# For production, use PostgreSQL:
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=postgres
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=n8n_password

# Basic Auth (disable for production with proper auth)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# LLM Provider Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# Web Search Configuration
SEARCH_API_KEY=your-search-api-key-here
SEARCH_ENGINE=google
RESEARCH_RATE_LIMIT_RPM=20
RESEARCH_MAX_SOURCES=5

# Services Configuration
MODEL_BUILDER_URL=http://model-builder:3000
LAYOUT_URL=http://layout:3003
INGEST_URL=http://ingest:3001
REDIS_URL=redis://redis:6379

# AWS Configuration for Data Lake
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=wessley-lake
S3_PREFIX=jobs
S3_ENDPOINT=https://s3.amazonaws.com

# Rate Limiting
RATE_LIMIT_OPENAI_RPM=50
RATE_LIMIT_SEARCH_RPM=20
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Caching Configuration
CACHE_TTL_SECONDS=3600
CACHE_LLM_METADATA_TTL=86400
CACHE_RESEARCH_TTL=604800

# Quality Gates
CONFIDENCE_THRESHOLD=0.75
MAX_GAPS_ALLOWED=2
MANUAL_REVIEW_QUEUE_ENABLED=true

# Pipeline Configuration
BATCH_SIZE_LLM=20
MAX_RETRIES=3
TIMEOUT_SECONDS=300
IDEMPOTENCY_ENABLED=true

# Monitoring & Telemetry
TELEMETRY_ENABLED=true
LOG_LEVEL=info
METRICS_ENABLED=true

# Security
WEBHOOK_SECRET=your-webhook-secret-here
CORS_ORIGIN=*

# Development flags
DEBUG_MODE=false
MOCK_LLM_RESPONSES=false
SKIP_CACHE=false